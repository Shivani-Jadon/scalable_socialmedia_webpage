<!-- this common layout will be included in all the views -->
<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %>
        </title> 
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://kit.fontawesome.com/abc62f7ecd.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/layout.css" type="text/css">
        <%- style %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body>
        <!-- including partial for header in the layout -->
        <%- include('_header'); %>

        <main id="layout-main">
            <%- body %>
        </main>        

        <!-- including partial for footer in the layout -->
        <%- include('_footer'); %>

        <!-- displaying flash msgs at front-end -->
        <script>            
        // success flash msg
        <% if(flash.success && flash.success.length > 0) { %>
            new Noty({
                type : 'success',
                layout : "topRight",
                text: "<%= flash.success %>",
                theme : "metroui",
                timeout : 2000
            }).show();
        <% } %>

        // error flash msg
        <% if(flash.error && flash.error.length > 0) { %>
            new Noty({
                type : 'error',
                layout : "topRight",
                text: "<%= flash.error %>",
                theme : "metroui",
                timeout : 2000
            }).show();
        <% } %>

        // alert flash msg
        <% if(flash.warning && flash.warning.length > 0) { %>
            new Noty({
                type : 'warning',
                layout : "topRight",
                text: "<%= flash.warning %>",
                theme : "metroui",
                timeout : 2000
            }).show();
        <% } %>
        </script>
        
        <%- script %>
    </body>
    

</html>