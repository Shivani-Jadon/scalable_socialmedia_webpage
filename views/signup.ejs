<!-- view for user sign-in form -->

<form action="/create_account/add" id="signup-form" method="POST"> 
    <!-- input for first name of user -->
    <label for="first_name">First name</label>
    <br/>
    <input type="text" name="first_name" placeholder="Enter first name" required>
    <br/>
    <!-- input for first name of user -->
    <label for="last_name">Last name</label>
    <br/>
    <input type="text" name="last_name" placeholder="Enter last name" required>
    <br/>
    <!-- input for email -->
    <label for="email">E-mail</label>
    <br/>
    <input type="email" name="email" placeholder="eg. example@gmail.com" required>
    <br/>
    <!-- input for password -->
    <label for="password">Password</label>
    <br/>
    <input type="password" name="password" placeholder="***********" placeholder="Enter password" required>
    <br/>
    <!-- input for confirm password -->
    <label for="confirm_password">Confirm Password</label>
    <br/>
    <input type="password" name="confirm_password" placeholder="***********" placeholder="Confirm password" required>
    <br/>
    <!-- submit button for login -->
    <button type="submit" form="signup-form" value="signup">Signup</button>

    <!-- redirecting to login page -->
    <div id="new-user">
        Already a user? 
        <a href="/login/user-login"> Login</a>
    </div>
</form>