<li id="user-comment-<%= comment.id %>">
    <%= comment.content %>
    <% if(locals.user && (locals.user.id == comment.user._id)) { %> 
        <a class="comment-del-btn" href="/posts/delete-comment/<%= comment.id %>" >
            <b>x</b>
        </a>      
    <% } %>
    <br/>
    
    <small>
        <%= comment.user.first_name %> <%= comment.user.last_name %>
    </small>

    <!-- :: change -->
    <% if(locals.user) { %>
        <!-- toggling like like -->
        <small>
            <a class="toggle-like-btn" data-likes="<%= comment.likes.length %>" href="/like/toggle/?id=<%=comment._id%>&type=comment">
                <!-- <button type="button" value="Like"></button> -->
                <span><%= comment.likes.length %> Likes</span>
            </a> 
        </small>     
    <% } else { %> 
        <!-- toggling like like -->
        <div>
                <span><%= comment.likes.length %> Likes</span>
        </div>         
    <% } %>
    
</li>