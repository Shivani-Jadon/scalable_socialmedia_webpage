<!-- view for posts page -->

<!-- linking stylesheet -->
<!-- <link rel="stylesheet" type="text/css" href="/css/posting.css"> -->

<h1>
    Welcome 
</h1>

<h2>
    You are viewing <%= title %> page
</h2>

<section>
    <h3>
        Posts
    </h3>
    
    <form action="/posts/create_post" id="posting-form" name="posting-form" method="POST">
        <textarea name="content" cols="30" rows="5" required></textarea>
        <br/>
        <input type="submit" value="Post">
    </form>

    <!-- div for storing post of user -->
    <div>
        <ul>
            <% for(post of posts){ %>
                <li>
                    <p>
                        <%= post.content %> &nbsp;
                        <!-- tag for deleting user's post -->
                        <% if(locals.user && (locals.user.id == post.userInfo.id)) { %> 
                            <a href="/posts/delete-post/<%= post.id %>">
                                <b>x</b>
                            </a>
                        <% } %>                        
                        <br/>
                        <small>
                            <%= post.userInfo.first_name %>
                            <%=  post.userInfo.last_name %>
                        </small>
                    </p>
                    <% if(locals.user) { %>
                    <div class="post-comments">
                        <form action="/posts/comment" method="POST">
                            <input type="text" name="content" placeholder="Comment here....">
                            <input type="hidden" name="post" value="<%= post._id %>">
                            <input type="submit" value="Add Comment">
                        </form>
                    </div>
                    <% } %>

                    <div class="comment-container">
                        <ul class="comment-list">
                            <% for (comment of post.comments) { %>
                                <li>
                                    <%= comment.content %>
                                    <% if(locals.user && (locals.user.id == comment.user.id)) { %> 
                                        <a href="/posts/delete-comment/<%= comment.id %>" >
                                            <b>x</b>
                                        </a>    
                                    <% } %>
                                    <br/>
                                    <small>
                                        <%= comment.user.first_name %>
                                    </small>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </li>
            <% } %>
        </ul>
        
    </div>
</section>
